#include <stdio.h>
#include <stdlib.h>
#include <windows.h>

void gotoligcol( int lig, int col )
{
    COORD mycoord;
    mycoord.X = col;
    mycoord.Y = lig;
    SetConsoleCursorPosition( GetStdHandle( STD_OUTPUT_HANDLE ), mycoord );
}

int main()
{
    int r;
    char n[10];
    printf("saisissez votre nom\n");
    scanf("%s", n);
    printf("saisissez un nombre\n");
    scanf("%d", &r);

    if(r==1)
    {
        gotoligcol(37,71);
        printf("%s", n);
    }
    if(r==2)
    {
        gotoligcol(37,61);
        printf("%s", n);
    }
